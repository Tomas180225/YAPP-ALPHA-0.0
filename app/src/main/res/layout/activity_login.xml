<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="40dp"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/logo_yapp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_correo"
        android:background="@drawable/edittext_background"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:layout_marginTop="15dp"
        android:inputType="textEmailAddress"
        android:id="@+id/email"
        android:padding="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:drawableStart="@drawable/ic_contrasena"
        android:drawablePadding="10dp"
        android:hint="Contraseña"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:id="@+id/contraseña"
        android:padding="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iniciar"
        android:textColor="@color/white"
        android:text="Iniciar"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/colorPrincipal"
        android:height="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Olvidaste tu conntraseña?"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_recuperarContraseña"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registrar"
        android:textColor="@color/white"
        android:text="Registrate"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/colorPrincipal"
        android:height="60dp"/>

</LinearLayout>